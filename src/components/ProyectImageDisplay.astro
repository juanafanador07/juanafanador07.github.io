---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";
import Spotlight from "./Spotlight.astro";
import Tilt from "./Tilt.astro";

interface Props {
  image: ImageMetadata;
  imageAlt: string;
}

const { image, imageAlt } = Astro.props;
---

<Tilt>
  <div
    class="rounded-lg overflow-hidden shadow-xl transition-all"
    data-proyect-picture
  >
    <Spotlight>
      <div
        class="flex items-start p-2 gap-1 bg-gradient-to-t from-neutral-100 to-neutral-200"
      >
        <div class="size-2 rounded-full bg-red-500"></div>
        <div class="size-2 rounded-full bg-yellow-500"></div>
        <div class="size-2 rounded-full bg-green-500"></div>
      </div>
      <Picture
        src={image}
        alt={imageAlt}
        formats={["avif", "webp"]}
        widths={[320, 768, 1024, 1280, 1536]}
        sizes="(max-width: 765px) 85vw, 40vw"
      />
    </Spotlight>
  </div>
</Tilt>
